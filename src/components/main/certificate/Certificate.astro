---
import { certificates } from "../../../const/const";
---

<section class="section-certificate">
    <div class="linear-grandient-1"></div>
    <div class="container-certificate">
        <h2 class="title-certificate" id="certificados">Mis Certificados</h2>
        <div class="grid-certificate">
            {
                certificates.map((cert) => (
                    <div class="card-certificate">
                        <img
                            src={cert.logo}
                            alt={cert.issuer}
                            class="logo-certificate"
                        />
                        <h3>{cert.title}</h3>
                        <p>
                            <strong>Expedición:</strong> {cert.date}
                        </p>
                        {cert.id && (
                            <p>
                                <strong>ID de la credencial:</strong> {cert.id}
                            </p>
                        )}
                        <p>
                            <strong>Aptitudes:</strong>{" "}
                            {cert.skills.join(" · ")}
                        </p>
                        <a
                            href={cert.credential}
                            target="_blank"
                            class="btn-certificate"
                        >
                            Mostrar credencial
                        </a>
                    </div>
                ))
            }
        </div>
    </div>
</section>
<style>
    .section-certificate {
        position: relative;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 50px 0;
        background-color: #111111;
    }

    .linear-grandient-1 {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(1, 190, 150, 0.5), #000);
        z-index: 0;
    }

    .container-certificate {
        position: relative;
        z-index: 1;
        width: 90%;
        margin: 0 auto;
        max-width: 1355px;
    }

    .title-certificate {
        font-size: 27px;
        color: #f6f6f9;
        font-weight: 800;
        text-align: left;
        margin-bottom: 40px;
    }

    .grid-certificate {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }

    .card-certificate {
        background-color: #1e1e1e;
        border: 1px solid #333;
        padding: 20px;
        border-radius: 8px;
        text-align: center;
        transition: transform 0.3s;
    }

    .card-certificate:hover {
        transform: translateY(-10px);
    }

    .logo-certificate {
        max-width: 100px;
        margin-bottom: 20px;
    }

    .card-certificate h3 {
        font-size: 20px;
        color: #01be96;
        margin-bottom: 10px;
    }

    .card-certificate p {
        font-size: 16px;
        color: #f6f6f9;
        margin-bottom: 10px;
    }

    .btn-certificate {
        display: inline-block;
        padding: 10px 20px;
        color: #111111;
        background-color: #01be96;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .btn-certificate:hover {
        background-color: #019b7a;
    }

    @media (max-width: 900px) {
        .container-certificate {
            flex-direction: column;
        }
        .container-text-certificate {
            width: 100%;
            padding: 10px 0;
        }
    }
</style>
